# Server-side only (not exposed to browser)
# Use this for internal URLs (e.g., http://localhost:8000, http://backend:8000)
# Optional - if not set, will use NEXT_PUBLIC_API_BASE_URL
API_BASE_URL=

# Client-side (exposed to browser)
# Use this for public URLs that browsers can access
NEXT_PUBLIC_API_BASE_URL=https://api.hvemvindervalget.dk

NEXT_PUBLIC_USE_STUB_DATA=true
NEXT_PUBLIC_CHART_LIBRARY=plotly

# Set to "true" to show the "waiting for completion" page instead of the main site
# When enabled, shows a random party leader with "MÃ¥ske <name>" message
NEXT_PUBLIC_WAITING_MODE=false

# Convex configuration
# Get this URL from your Convex dashboard after running `npx convex dev`
NEXT_PUBLIC_CONVEX_URL=

# Convex ingestion secret token (for authenticating R pipeline requests)
# Set this to a secure random string and use the same value in R pipeline
CONVEX_INGEST_SECRET_TOKEN=

# Convex direct ingestion URL (for sending dataframes directly)
# Format: https://<deployment>.convex.site/ingestDirect
# Falls back to CONVEX_INGEST_URL with /ingestDirect suffix if not set
CONVEX_INGEST_DIRECT_URL=

# Sevala S3 credentials (for Convex to fetch CSV files from S3 - optional, only if using S3-based ingestion)
SEVALA_S3_ACCESS_KEY_ID=
SEVALA_S3_SECRET_ACCESS_KEY=
SEVALA_S3_ENDPOINT=
SEVALA_S3_REGION=us-east-1

